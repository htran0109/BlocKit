<body>
	<h1 class="fontChange" id="appHeader">
		<div>
			<a href = "/homepage" ><img src = "../images/back.png" style = "width:60px;height:60px;" id = "backButton"></a>
			Run Task
		</div>
	</h1>
	
	<ul class="topnav fontChange" id="myTopnav">

	<li><a href="/runPage">To Do</a></li>
	<li><a href="/history">Completed</a></li>

	</ul>
	
	{{#each tasks}}
	<div class = "button" id = "id{{@index}}">
		<a class = "button fontChange" id = "id{{@index}}Text">
			{{title}}, Due: {{due_date}}, Will Take <br>{{hours}} Hours, {{minutes}} minutes</a>
			<br>
			<div class = "extra-holder">

				<div  class = "extra">
					<div class = "dropdown">
						<button onclick = "showDetails(dropDown{{@index}})"
						class = "dropbtn fontChange">Details
						<img src = "../images/dropDown.png" style = "width:20;height:20px;">
					</img>
				</button>

			</div>
		</div>
		
		<div class="extra">
			<a href="/editScreen2/{{@index}}" class = "button fontChange">
			Edit
			</a>
		</div>
		
		<div class = "extra">
			<a href = "/taskScreen/{{@index}}" class = "button fontChange">
				Start
			</a>
		</div>
		<div class = "extra" id = "delete" onClick = "taskDelete({{@index}})">
				<a href = "/runPage" class = "button fontChange">
				Delete
			</a>
		</div>
		<div id = "number">
			{{@index}}
		</div>

	</div>
	<div id = "dropDown{{@index}}" class = "dropdown-content fontChange">
		<div class = "inner-content fontChange">
			{{notes}}
		</div>

	</div>
	</div>
	{{/each}}
